= simple_form_for @story, html: { class: 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :body, input_html: { cols: 80, rows: 3 }
  = f.association :user
  -if @story.persisted?
    .control-group
      = f.label Story.human_attribute_name(:state)
      .controls= render partial: 'story_state', locals: {story: @story}
  .form-actions
    = f.button :submit, class: "btn-primary"

!!!
%html
  %head
    %title SimpleTaskManager</title>
    = stylesheet_link_tag    "application", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags 
  %body
    %header.navbar
      .navbar-inner
        =link_to "Simple Task Manager", root_path, class: "brand"
        %ul.nav
          %li 
            =link_to 'test2', '#'
          %li
            =link_to 'test', '#'
        .pull-right
          -if signed_in?
            =link_to current_user.name, user_path(current_user)
            =link_to 'Выйти', session_path, method: :delete
          -else
            =link_to "Sign in", new_session_path
          
    .container
      = flash_block
      = yield 
-if Rails.env.development?
  %pre.prettyprint
    %ul
      %li=session.inspect
      %li=params.inspect
